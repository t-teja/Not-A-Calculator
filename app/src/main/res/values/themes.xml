<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NotACalculator" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.NotACalculator" parent="Base.Theme.NotACalculator" />

    <!-- Calculator Button Styles -->
    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:elevation">2dp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:background">@drawable/button_number_selector</item>
        <item name="android:textColor">@color/button_text_number</item>
    </style>

    <style name="CalculatorButton.Number.Wide" parent="CalculatorButton.Number">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="CalculatorButton.Function" parent="CalculatorButton">
        <item name="android:background">@drawable/button_function_selector</item>
        <item name="android:textColor">@color/button_text_function</item>
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:background">@drawable/button_operator_selector</item>
        <item name="android:textColor">@color/button_text_operator</item>
    </style>
</resources>